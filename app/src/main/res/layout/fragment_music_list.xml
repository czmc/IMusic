<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dddddd"
    tools:context="imusic.dz4.imusic.frag.LocalMusicFragment">

    <ListView
        android:background="#f7efef"
        android:id="@+id/music_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#e9e7e7"
        android:dividerHeight="1dp"
        android:keepScreenOn="true"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/dialog"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/dialog_leter_bg"
        android:gravity="center"
        android:padding="5dip"
        android:textColor="#f5f5f5"
        android:textSize="35.0dip"
        android:visibility="invisible" />

    <me.czmc.imusic.view.MyLetterView
        android:id="@+id/right_letter"
        android:layout_width="25dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" />

</RelativeLayout>
