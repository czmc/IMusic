<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:czmz="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <me.czmc.imusic.view.CircleImageView
            android:id="@+id/music_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:src="@drawable/cd"
            czmz:border_color="#ffffff"
            czmz:border_width="1dp" />

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/music_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/music_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_default"
                android:textSize="@dimen/fontSize"
                android:textStyle="bold"
                android:theme="@style/TextTheme_Light_Normal" />

            <TextView
                android:id="@+id/music_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_default"
                android:textSize="@dimen/fontSize"
                android:theme="@style/TextTheme_Light_Small" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/album_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专辑："
            android:textSize="@dimen/fontSize"
            android:textStyle="bold"
            android:theme="@style/TextTheme_Light_Normal" />

        <TextView
            android:id="@+id/album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_default"
            android:textSize="@dimen/fontSize"
            android:theme="@style/TextTheme_Light_Small" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/music_duration_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时长："
            android:textSize="@dimen/fontSize"
            android:textStyle="bold"
            android:theme="@style/TextTheme_Light_Normal" />

        <TextView
            android:id="@+id/music_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_default"
            android:textSize="@dimen/fontSize"
            android:theme="@style/TextTheme_Light_Small" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/music_path_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="路径："
            android:textSize="@dimen/fontSize"
            android:textStyle="bold"
            android:theme="@style/TextTheme_Light_Normal" />

        <TextView
            android:id="@+id/music_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_default"
            android:textSize="@dimen/fontSize"
            android:theme="@style/TextTheme_Light_Small" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lrc_path_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌词路径："
            android:textSize="@dimen/fontSize"
            android:textStyle="bold"
            android:theme="@style/TextTheme_Light_Normal" />

        <TextView
            android:id="@+id/lrc_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_default"
            android:textSize="@dimen/fontSize"
            android:theme="@style/TextTheme_Light_Small" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/album_path_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专辑图路径："
            android:textSize="@dimen/fontSize"
            android:textStyle="bold"
            android:theme="@style/TextTheme_Light_Normal" />

        <TextView
            android:id="@+id/album_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_default"
            android:textSize="@dimen/fontSize"
            android:theme="@style/TextTheme_Light_Small" />
    </LinearLayout>
</LinearLayout>
